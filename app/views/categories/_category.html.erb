<div id="<%= dom_id category %>" class="category d-flex justify-content-between align-items-center p-3 mb-2 text-dark rounded border border-dark w-100">
    <div>
        <%= image_tag category.icon, class: "category-icon", alt: category.name %>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <h3 class="category-name mb-0 p-0 text-uppercase fw-bold">
            ➡️<%= link_to category.name, user_category_expenses_path(current_user, category) %>
        </h3>
        <p class="p-0 m-0 text-muted fs-6">
            <%= category.created_at.strftime("%d %b %Y") %>
        </p>
    </div>
    <p class="mb-0 p-0 text-muted fs-6">
        Total: <%= category.total_expenses(current_user) %>
    </p>
</div>
