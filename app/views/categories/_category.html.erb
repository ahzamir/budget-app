<div id="<%= dom_id category %>" class="category d-flex justify-content-between align-items-center p-3 mb-2 text-dark rounded border border-dark">
    <div>
        <%= image_tag category.icon, class: "icon", alt: category.name %>
    </div>
    <div class="category-name d-flex flex-column justify-content-center align-items-center">
        <h3 class="category-name mb-0 p-0 text-uppercase fw-bold">
            <%= link_to category.name, user_category_expenses_path(current_user, category) %>
        </h3>
        <p class="created-at">
            <%= category.created_at.strftime("%d %b %Y") %>
        </p>
    </div>
    <p class="total-expenses">
        Total expenses: <%= category.total_expenses(current_user) %>
    </p>
</div>
