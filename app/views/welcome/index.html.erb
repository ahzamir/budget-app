<section class="welcome">
  <h1 class="welcome__title">Budget Planner</h1>
  <div class="welcome-image"><%= image_tag 'Wallet-amico.svg', class: 'welcome-illustration' %></div>
  <div class="welcome-text">
    <h2 class="welcome-text__title">Welcome to personal budget planner</h2>
    <p class="welcome-text__description">This is a mobile application that allows you to keep track of your expenses and incomes.</p>
  </div>
</section>
<div class="slide">
  <% if current_user.present? %>
  <%= link_to 'Skip', user_categories_path(current_user), class: 'slide__skip' %>
  <% else %>
  <%= link_to 'Skip', new_user_session_path, class: 'skip__link' %>
  <% end %>
  <%= link_to 'Next', welcome_info_path, class: 'next__link' %>
</div>